                    <div class="cloth">
                        <div class="desc">
                            <p><%= cloth.description %></p>
                        </div>
                    </div>
                <% end %>
            </div>
            <div class="link">
                <%= link_to "Ver mÃ¡s", brand %>
            </div>
        </div>
    <% end %>
