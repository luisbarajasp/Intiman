<div class="well">

  <div class="row">
    <div class="col-md-4 prenda">
      <div class="col-xs-6">
          <%= image_tag cloth.image1.url(:preview) %>
      </div>
      <div class="col-xs-offset-1 col-xs-5">
          <h4><%= cloth.category.singular %></h4>
          <h5><%= cloth.brand.name %></h5>
          <p><%= cloth.description %></p>
      </div>
    </div>
    <div class="form">

      <%= form_for (order_item), remote: true,:url => "/order_items/#{order_item.id}", :html=>{:id=>'item_form'} do |f| %>
          <div class="input-colors col-md-1">
              <% @cos.each do |co| %>
                  <% if co.cloth == order_item.cloth %>
                      <% if order_item.color_id == co.color_id %>
                          <%= link_to "#{co.color_id}", id: "link-circle" do %>
                              <div id="circle" style="background: <%= co.color.hex %>;">
                                  <div id="mini-circle" style="opacity: 1;"></div>
                              </div>
                          <% end %>
                      <% else %>
                          <%= link_to "#{co.color_id}", id: "link-circle" do %>
                              <div id="circle" style="background: <%= co.color.hex %>;">
                                  <div id="mini-circle"></div>
                              </div>
                          <% end %>
                      <% end %>
                  <% end %>
              <% end %>
          </div>
          <%= f.hidden_field :color_id, id: "color-input", onchange: "$('#item_form').submit();" %>
          <div class="input-sizes col-md-2">
              <% @sis.each do |si| %>
                 <% if si.cloth == order_item.cloth %>
                     <% if order_item.size_id == si.size_id %>
                         <%= link_to si.size.letter, "#{si.size_id}", class:"selected" %>
                     <% else %>
                         <%= link_to si.size.letter, "#{si.size_id}", class:"normal-size" %>
                     <% end %>
                 <% end %>
              <% end %>
          </div>
          <%= f.hidden_field :size_id, id: "size-input", onchange: "$('#item_form').submit();" %>
          <div class="col-md-2 unit_price">
              <h4>MXN <%= number_to_currency order_item.unit_price %></h4>
          </div>
          <div class="col-md-1 cantidad">
            <%= f.select :quantity, options_for_select(1..10, order_item.quantity), {}, class: "form-control", onchange: "$('#item_form').submit();"%>
            <%= f.hidden_field :cloth_id, value: cloth.id %>
          </div>
          <div class="col-md-2">
              <h4 class="text-right">MXN <span style="font-weight: 700;"><%= number_to_currency order_item.total_price %></span></h4>
          </div>
      <% end %>
    </div>

    <div class="delete">
        <%= link_to "<i class='fa fa-times'></i>".html_safe, order_item, { data: { confirm: "¿Estás seguro que quieres borrar esta prenda de tu carrito?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
    </div>

  </div>
</div>
