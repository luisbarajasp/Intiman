<% if !@order_item.nil? && @order_item.errors.any? %>
  <div class="alert alert-danger">
    <a href="#" data-dismiss="alert" class="close">×</a>
    <ul>
    <% @order_item.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="cloths-bag">
    <h2>Prendas</h2>
    <% if @order_items.size == 0 %>
      <p class="text-center">
        Aún no tienes prendas en tu bolsa de compra. <i class="fa fa-exclamation-circle"></i>
      </p>
    <% else %>
      <div class="order_items">
          <% @order_items.each do |order_item| %>
            <%= render 'carts/cart_row', cloth: order_item.cloth, order_item: order_item, show_total: true %>
          <% end %>
      </div>
    <% end %>
</div>

<div class="side-menu-cart">
    <h2>Subtotal</h2>
  <div class="subtotal">
      <%= render 'carts/subtotal' %>
  </div>
  <div class="checkout">
      <%= link_to "CHECKOUT", checkout_path %>
  </div>
</div>
