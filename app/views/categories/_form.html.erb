<%= form_for @category do |f| %>
    <% if @category.errors.any? %>

        <h2><%= pluralize(@category.errors.count, "error") %> prevented from saving the pic:</h2>
        <ul>
            <% @category.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>

    <% end %>

	<div class="form-group">
		<%= f.label :name, "Nombre en plural de la categoria" %> <br>
		<%= f.text_field :name, class: "form-control" %>
	</div>
    <div class="form-group">
		<%= f.label :singular, "Nombre en singular de la categoria" %> <br>
		<%= f.text_field :singular, class: "form-control" %>
	</div>
	<div class="form-group">
   	 	<%= f.submit "Submit", class: "btn btn-success" %>
 	</div>


<% end %>
<div class="cancel_btn">
    <%= link_to "Cancel", categories_path, class: "btn btn-danger" %>
</div>
