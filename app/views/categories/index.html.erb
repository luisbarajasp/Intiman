<div class="categories-index skinny_wrapper">
    <% if admin_signed_in? %>
        <%= link_to "Nueva", new_category_path %>
    <% end %>
    <% @categories.each do |category| %>
        <div class="category">
            <div class="name">
                <h2><%= category.name %></h2>
            </div>
            <div class="clothes">
                <% category.cloths.each do |cloth| %>
                    <div class="cloth">
                        <div class="desc">
                            <p><%= cloth.description %></p>
                        </div>
                    </div>
                <% end %>
            </div>
            <div class="link">
                <%= link_to "Ver mÃ¡s", category %>
            </div>
        </div>
    <% end %>
</div>
