<%= form_for (@color) do |f| %>
    <% if @color.errors.any? %>

        <h2><%= pluralize(@color.errors.count, "error") %> prevented from saving the board:</h2>
        <ul>
            <% @color.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>

    <% end %>

    <div class="form-group">
		<%= f.label :name, "Ingresa el nombre del color" %> <br>
		<%= f.text_field :name, class: "form-control"%>
	</div>

    <div class="form-group">
		<%= f.label :hex, "Ingresa el valor HEX del color" %> <br>
		<%= f.text_field :hex, class: "form-control"%>
	</div>

	<div class="form-group">
   	 	<%= f.submit "Submit", class: "btn btn-success" %>
 	</div>

<% end %>
