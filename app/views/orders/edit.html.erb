<div class="skinny_wrapper">
    <div class="page-name">
        <h3>Â¿Orden Enviada?</h3>
        <hr>
    </div>
    <%= form_for @order do |f| %>
        <% if @order.errors.any? %>

            <h2><%= pluralize(@order.errors.count, "error") %> prevented from saving the pic:</h2>
            <ul>
                <% @order.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>

        <% end %>

    	<div class="form-group">
    		<%= f.label :order_status_id, "Cambiar a enviado" %> <br>

    		<%= f.select :order_status_id, OrderStatus.all.map {|x| [x.name, x.id]}, class: "form-control" %>
    	</div>
        <div class="form-group">
    		<%= f.label :tracking, "Seguimiento del pedido" %> <br>
    		<%= f.text_field :tracking, class: "form-control" %>
    	</div>
    	<div class="form-group">
       	 	<%= f.submit "Aceptar", class: "btn btn-success" %>
     	</div>
    <% end %>
    <div class="cancel_btn">
        <%= link_to "Cancel", @order, class: "btn btn-danger" %>
    </div>
</div>
