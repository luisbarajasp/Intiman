<div class="home">
    <div id="slider">
        <div class="slide" id="s1">
            <div class="mask"></div>
            <div class="content">
                <div class="title">
                    <h1>¡FELIZ DIA DEL PADRE!</h1>
                </div>
                <div class="description">
                    <h3>En Intiman queremos festejarte como te mereces</h3>
                </div>
                <div class="guide-btn">
                    <a href="#">VER PROMOCIÓN</a>
                </div>
            </div>
            <%= image_tag 'homeslider1' %>
        </div>
        <div class="slide" id="s2">
            <div class="mask"></div>
            <div class="content content2">
                <div class="title">
                    <h1>¡NUEVA LÍNEA!</h1>
                </div>
                <div class="description">
                    <h3>Con el verano llega la nueva línea, chécalos</h3>
                </div>
                <div class="guide-btn">
                    <a href="#">VER PRODUCTOS</a>
                </div>
            </div>
            <%= image_tag 'homeslider2' %>
        </div>
    </div>
    <div class="changers">
        <div class="changer active" data-link="s1" ></div>
        <div class="changer" data-link="s2"></div>
    </div>
    <div class="progress-bar">
        <hr id="bar">
    </div>
    <div class="wrapper">
        <div class="page-name">
            <h3>Marcas</h3>
            <hr>
        </div>
        <div id="brands" class="transitions-enabled clearfix">
            <% @brands.each do |brand| %>
                <div class="brand">
                    <div id="image">
                        <% if brand.cloths.count > 0 %>
                            <%= image_tag brand.cloths.first.image1.url(:preview) %>
                        <% end %>
                        <div class="buy">
                            <%= link_to "Comprar #{brand.name}", brand %></h3>
                        </div>
                    </div>
                    <div class="name">
                        <h3><%= brand.name %></h3>
                    </div>

                </div>
            <% end %>
        </div>
        <div class="page-name">
            <h3>Categorias</h3>
            <hr>
        </div>
        <div id="categories" class="transitions-enabled clearfix">
            <% @categories.each do |category| %>

                <div class="category">

                    <div id="image">
                        <% if category.cloths.count > 0 %>
                            <%= image_tag category.cloths.first.image2.url(:preview) %>
                        <% end %>
                        <%= link_to category do%>
                        <div class="buy"></div>
                        <% end %>
                    </div>
                    <div class="name">
                        <h3><%= category.name %></h3>
                    </div>
                </div>

            <% end %>
        </div>
    </div>
</div>
