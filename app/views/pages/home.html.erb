<div class="home">
    <div id="slider">
        <div class="slide" id="s1">
            <div class="mask"></div>
            <div class="content">
                <div class="title">
                    <h1>¡FELIZ DIA DEL PADRE!</h1>
                </div>
                <div class="description">
                    <h3>En Intiman queremos festejarte como te mereces</h3>
                </div>
                <div class="guide-btn">
                    <a href="#">VER PROMOCIÓN</a>
                </div>
            </div>
            <%= image_tag 'homeslider1' %>
        </div>
        <div class="slide" id="s2">
            <div class="mask"></div>
            <div class="content content2">
                <div class="title">
                    <h1>¡NUEVA LÍNEA!</h1>
                </div>
                <div class="description">
                    <h3>Con el verano llega la nueva línea, chécalos</h3>
                </div>
                <div class="guide-btn">
                    <a href="#">VER PRODUCTOS</a>
                </div>
            </div>
            <%= image_tag 'homeslider2' %>
        </div>
    </div>
    <div class="changers">
        <div class="changer active" data-link="s1" ></div>
        <div class="changer" data-link="s2"></div>
    </div>
    <div class="progress-bar">
        <hr id="bar">
    </div>
    <div id="categories" class="wrapper">
        <div class="category" id="c1">
            <%= image_tag "c1" %>
            <a href="/categories/termicos">
                <div class="mask">
                    <h2>Térmicos</h2>
                </div>
            </a>
        </div>
        <div class="category" id="c2">
            <%= image_tag "c2" %>
            <a href="categories/trajes-de-bano">
                <div class="mask">
                    <h2>Trajes de baño</h2>
                </div>
            </a>
        </div>
        <div class="category" id="c3">
            <%= image_tag "c3" %>
            <a href="categories/playeras">
                <div class="mask">
                    <h2>Playeras</h2>
                </div>
            </a>
        </div>
        <div class="category" id="c4">
            <%= image_tag "c4" %>
            <a href="categories/boxers">
                <div class="mask">
                    <h2>Bóxers</h2>
                </div>
            </a>
        </div>
        <div class="category" id="c5">
            <%= image_tag "c5" %>
            <a href="categories/tangas">
                <div class="mask">
                    <h2>Tangas</h2>
                </div>
            </a>
        </div>
    </div>
    <div id="brandssales">
        <div class="brands column">
            <a href="/brands/duha">
                <div class="duha row">
                    <div class="column ima">
                        <%= image_tag "duha.png" %>
                    </div>
                    <div class="column name">
                        <h3>DUHA</h3>
                    </div>
                </div>
            </a>
            <a href="/brands/byjou">
                <div class="byjou row">
                    <div class="column name">
                        <h3>BYJOU</h3>
                    </div>
                    <div class="column ima">
                        <%= image_tag "byjou.png" %>
                    </div>
                </div>
            </a>
            <a href="/brands/2clovek">
                <div class="clovek row">
                    <div class="column ima">
                        <%= image_tag "clovek.png" %>
                    </div>
                    <div class="column name">
                        <h3>2CLOVEK</h3>
                    </div>
                </div>
            </a>
        </div>
        <%= link_to sales_index_path do %>
            <div class="sales column">
                <div class="ima">
                    <%= image_tag "sales.png" %>
                </div>
                <div class="text">
                    <h1>SALES</h1>
                    <%= link_to "Comprar ahora", sales_index_path, id: "sale-link" %>
                </div>
            </div>
        <% end %>
    </div>
</div>
