<%= form_for (@size) do |f| %>
    <% if @size.errors.any? %>

        <h2><%= pluralize(@size.errors.count, "error") %> prevented from saving the board:</h2>
        <ul>
            <% @size.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>

    <% end %>

    <div class="form-group">
		<%= f.label :letter, "Ingresa la letra de la talla" %> <br>
		<%= f.text_field :letter, class: "form-control"%>
	</div>

	<div class="form-group">
   	 	<%= f.submit "Submit", class: "btn btn-success" %>
 	</div>

<% end %>
